{
  "toolSpec": {
    "name": "scheduler_tools",
    "description": "Tools for checking availability and booking appointments",
    "tools": [
      {
        "name": "check_availability",
        "description": "Check technician calendar availability for booking",
        "inputSchema": {
          "type": "object",
          "properties": {
            "start_date": {
              "type": "string",
              "description": "Start date for availability check (ISO format)"
            },
            "end_date": {
              "type": "string",
              "description": "End date for availability check (ISO format)"
            },
            "service_type": {
              "type": "string",
              "description": "Type of service (HVAC, plumbing, electrical)"
            },
            "location": {
              "type": "string",
              "description": "Customer location for proximity matching"
            }
          },
          "required": ["start_date", "service_type"]
        }
      },
      {
        "name": "book_appointment",
        "description": "Book appointment in calendar and database",
        "inputSchema": {
          "type": "object",
          "properties": {
            "lead_id": {
              "type": "string",
              "description": "Lead identifier"
            },
            "scheduled_time": {
              "type": "string",
              "description": "Appointment time (ISO format)"
            },
            "technician_id": {
              "type": "string",
              "description": "Technician identifier"
            },
            "service_type": {
              "type": "string",
              "description": "Service to be performed"
            },
            "customer_address": {
              "type": "string",
              "description": "Service location address"
            }
          },
          "required": ["lead_id", "scheduled_time", "technician_id", "service_type"]
        }
      },
      {
        "name": "send_confirmation",
        "description": "Send appointment confirmation via email and SMS",
        "inputSchema": {
          "type": "object",
          "properties": {
            "appointment_id": {
              "type": "string",
              "description": "Appointment identifier"
            }
          },
          "required": ["appointment_id"]
        }
      }
    ]
  }
}
